<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MDP.LoginPage"
             Title="Login">
    
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <StackLayout>
                    <Image Source="xinas.png" Aspect="AspectFill"/>
                </StackLayout>
                <StackLayout Margin="20, 0, 20, 0">
                    <Entry x:Name="NumAluno" Placeholder="Nº de Aluno"
                           HorizontalOptions="FillAndExpand"/>
                    <Entry x:Name="Pass" Placeholder="Password"
                           HorizontalOptions="FillAndExpand"/>
                </StackLayout>
                <Button x:Name="btnEntrar" Text="Login" TextColor="White" BackgroundColor="#e97a24" VerticalOptions="End" HorizontalOptions="Center"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>