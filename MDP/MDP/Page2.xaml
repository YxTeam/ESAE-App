<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MDP.Page2"
             Title="Título da Página 2">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="http://images.static-bluray.com/reviews/8932_1.jpg" Aspect="Fill"/>
            <Entry x:Name="NumAluno" Placeholder="Nº de Aluno"
                   HorizontalOptions="FillAndExpand"/>
            <Entry x:Name="Pass" Placeholder="Password"
                   HorizontalOptions="FillAndExpand"/>
            <Button Text="Login" TextColor="White" BackgroundColor="#e97a24" VerticalOptions="End" HorizontalOptions="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>