<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MDP.Page4">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Image Source="test.jpg" Aspect="Fill" />
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <StackLayout Orientation="Vertical" HorizontalOptions="Start">
                    <Button x:Name="btnCursos" Image="ic_date_white.png" BackgroundColor="#e97a24" HeightRequest="70" WidthRequest="70" />
                    <Label Text="Horário" TextColor="#e97a24"/>
                </StackLayout>
                <StackLayout Orientation="Vertical" HorizontalOptions="Center">
                    <Button x:Name="btnLogin" Image="ic_info_black.png" BackgroundColor="#e97a24" HeightRequest="70" WidthRequest="70" />
                    <Label Text="Avisos" TextColor="#e97a24"/>
                </StackLayout>
                <StackLayout Orientation="Vertical" HorizontalOptions="End">
                    <Button x:Name="btnContact" Image="ic_event_white.png" BackgroundColor="#e97a24" HeightRequest="70" WidthRequest="70" />
                    <Label Text="Eventos" TextColor="#e97a24"/>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>