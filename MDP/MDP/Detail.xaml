<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MDP.Detail"
             Title="App da ESAE - ISMT" >

    <ContentPage.Content>
        <StackLayout>
            <Image Source="http://images.static-bluray.com/reviews/8932_1.jpg" Aspect="Fill" />
            <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                <Button Text="1" TextColor="White" BackgroundColor="#e97a24" HorizontalOptions="Start" />
                <Button x:Name="btnLogin" Text="2" TextColor="White" BackgroundColor="#e97a24" HorizontalOptions="Center" Clicked="btnLogin_Clicked" />
                <Button Text="3" TextColor="White" BackgroundColor="#e97a24" HorizontalOptions="End" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>